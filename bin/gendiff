#!/usr/bin/env/php php

<?php
require_once __DIR__ . '/../vendor/autoload.php';
require(__DIR__ . '/../vendor/docopt/docopt/src/docopt.php');

use function Differ\Differ\genDiff;
use function Differ\Parsers\getFileData;

$doc = <<<'DOCOPT'
Generate diff

Usage:
  gendiff (-h|--help)
  gendiff (-v|--version)
  gendiff [--format <fmt>] <firstFile> <secondFile>

Options:
  -h --help                     Show this screen
  -v --version                  Show version
  --format <fmt>                Report format [default: json]

DOCOPT;

$params = array(
    'argv' => array_slice($_SERVER['argv'], 1),
    'help' => true,
    'version' => null,
    'optionsFirst' => false,
);

$args = Docopt::handle($doc);

$directory1 = '..' . DIRECTORY_SEPARATOR . $args->args['<firstFile>'];
$directory2 = '..' . DIRECTORY_SEPARATOR . $args->args['<secondFile>'];

try {
    $fileData1 = getFileData($directory1);
} catch (Exception $e) {
    throw new Exception("$directory1 nothing file in directory.");
}

try {
    $fileData2 = getFileData($directory2);
} catch (Exception $e) {
    throw new Exception("$directory2 nothing file in directory.");
}

try {
    echo genDiff($fileData1, $fileData2, $args->args['--format']);
} catch (Exception $e) {
    throw new Exception($e->getMessage());
}
